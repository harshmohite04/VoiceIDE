{
  "name": "windsurf-voice-pm",
  "displayName": "Voice PM Assistant",
  "description": "Voice-powered discussion partner and product manager for Windsurf IDE",
  "version": "1.0.0",
  "publisher": "voice-pm-assistant",
  "repository": {
    "type": "git",
    "url": "https://github.com/voice-pm/windsurf-extension.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "voice",
    "ai",
    "assistant",
    "product manager",
    "discussion",
    "speech",
    "chatgpt"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voicePM.startVoiceChat",
        "title": "Start Voice Discussion",
        "category": "Voice PM"
      },
      {
        "command": "voicePM.stopVoiceChat",
        "title": "Stop Voice Discussion",
        "category": "Voice PM"
      },
      {
        "command": "voicePM.toggleMute",
        "title": "Toggle Microphone",
        "category": "Voice PM"
      },
      {
        "command": "voicePM.openDashboard",
        "title": "Open Voice PM Dashboard",
        "category": "Voice PM"
      },
      {
        "command": "voicePM.resetPermissions",
        "title": "Reset Microphone Permissions",
        "category": "Voice PM"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "voicePMDashboard",
          "name": "Voice PM Assistant",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "voicePMView",
          "title": "Voice PM Assistant",
          "icon": "$(mic)"
        }
      ]
    },
    "keybindings": [
      {
        "command": "voicePM.startVoiceChat",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v"
      },
      {
        "command": "voicePM.toggleMute",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      }
    ],
    "configuration": {
      "title": "Voice PM Assistant",
      "properties": {
        "voicePM.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for AI conversations"
        },
        "voicePM.googleCloudKeyFile": {
          "type": "string",
          "default": "",
          "description": "Path to Google Cloud service account key file (JSON)"
        },
        "voicePM.googleProjectId": {
          "type": "string",
          "default": "",
          "description": "Google Cloud Project ID"
        },
        "voicePM.voiceLanguage": {
          "type": "string",
          "default": "en-US",
          "enum": ["en-US", "en-GB", "es-ES", "fr-FR", "de-DE", "it-IT", "pt-BR", "ja-JP", "ko-KR", "zh-CN"],
          "description": "Voice recognition and TTS language"
        },
        "voicePM.geminiVoice": {
          "type": "string",
          "default": "en-US-Standard-J",
          "enum": ["en-US-Standard-A", "en-US-Standard-B", "en-US-Standard-C", "en-US-Standard-D", "en-US-Standard-E", "en-US-Standard-F", "en-US-Standard-G", "en-US-Standard-H", "en-US-Standard-I", "en-US-Standard-J", "en-US-Wavenet-A", "en-US-Wavenet-B", "en-US-Wavenet-C", "en-US-Wavenet-D", "en-US-Wavenet-E", "en-US-Wavenet-F"],
          "description": "Google Cloud TTS voice name"
        },
        "voicePM.conversationMode": {
          "type": "string",
          "default": "product_manager",
          "enum": ["product_manager", "discussion_partner", "code_reviewer", "brainstorming"],
          "description": "AI conversation mode and personality"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^5.0.0",
    "openai": "^4.20.0",
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "node-record-lpcm16": "^1.0.1"
  }
}
