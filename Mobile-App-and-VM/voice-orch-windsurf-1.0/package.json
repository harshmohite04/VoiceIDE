{
  "name": "voicedev-partner",
  "version": "1.0.0",
  "description": "Voice-powered AI development companion with real-time conversation and prototype building",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd packages/backend && npm install",
    "install:frontend": "cd packages/frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "VoiceDev Team",
  "license": "MIT",
  "keywords": [
    "voice",
    "ai",
    "development",
    "realtime",
    "openai",
    "prototype",
    "conversation"
  ]
}
