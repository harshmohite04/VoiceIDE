{
  "name": "voice-ide-orchestrator",
  "displayName": "Voice IDE Orchestrator",
  "description": "A voice-driven AI orchestration layer for Cursor and Windsurf",
  "version": "0.1.0",
  "publisher": "voice-ide",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "voice-ide-orchestrator.startListening",
        "title": "Start Voice Command",
        "category": "Voice IDE"
      },
      {
        "command": "voice-ide-orchestrator.stopListening",
        "title": "Stop Voice Command",
        "category": "Voice IDE"
      }
    ],
    "keybindings": [
      {
        "command": "voice-ide-orchestrator.startListening",
        "key": "ctrl+shift+space",
        "mac": "cmd+shift+space",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Voice IDE Orchestrator",
      "properties": {
        "voiceIDE.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start listening on extension activation"
        },
        "voiceIDE.language": {
          "type": "string",
          "default": "en-US",
          "description": "Language for speech recognition"
        },
        "voiceIDE.confirmationSound": {
          "type": "boolean",
          "default": true,
          "description": "Play sound when command is recognized"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.42.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.0"
  },
  "dependencies": {
    "@vscode/vsce": "^2.24.0"
  }
}
